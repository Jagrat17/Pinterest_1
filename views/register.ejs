<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 bg-center bg-cover bg-[url('/images/registerimg.jpg')] flex items-center justify-center">
  <div class="w-25[vw]  bg-white px-20 py-10 rounded-[30px]">
    <h1 class="text-3xl leading-none capitalize mb-10 text-center font-semibold text-zinc-700">Create new account</h1>
    <form action="/register" method="post">
      <input class = "border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
      <input class = "border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
      <input class = "border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Fullname">
      <input class = "border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
      <input class = "border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
      <!-- <a class="mt-2 font-semibold text-zinc-500 inline-block" href="">Forgot password ?</a> -->
      <input class = "block mt-5 w-full px-3 py-2 bg-red-500 text-white rounded-full" type="submit" value="Create New Account">
      <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; </p>
    </form>
    <a class="inline-block mt-5 text-sm font-semibold text-center text-zinc-700 w-full" href="/">Login Existing Account?</a>
  </div>
    
</div>
<% include ./partials/footer.ejs %>